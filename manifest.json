{
  "manifest_version": 2,
  "name": "PeerTube Watch History and Recommendations",
  "version": "1.0",
  "description": "Tracks watch history and provides recommendations for PeerTube videos",
  
  "permissions": [
    "storage",
    "alarms",
    "unlimitedStorage",
    "*://*/*"
  ],

  "background": {
    "scripts": [
      "db.js",
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "*://*/videos/watch/*",
        "*://*/w/*",
        "*://*/v/*"
      ],
      "js": [
        "db.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "PeerTube Recommendations",
    "default_popup": "cosine_similarity.html"
  },

  "web_accessible_resources": [
    "db.js",
    "content.js",
    "background.js",
    "cosine_similarity.js",
	"videoUUIDs.json.json",
	"metadataList.json",
    "processedUUIDs.json"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}