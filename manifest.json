{
  "manifest_version": 3,
  "name": "PeerTube Extension Suite",
  "version": "1.0",
  "description": "Combines PeerTube metadata extraction and watch tracking functionalities.",
  "permissions": [
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PeerTube Tools",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*/w/*", "*://*/videos/watch/*", "*://*/v/*"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": [
      "cosine_similarity.html",
      "cosine_similarity.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
